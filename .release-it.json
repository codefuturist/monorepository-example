{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "requireBranch": false,
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "push": true,
    "pushRepo": "origin"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "autoGenerate": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [],
    "after:bump": []
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
