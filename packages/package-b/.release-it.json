{
  "git": {
    "commitMessage": "chore(package-b): release v${version}",
    "tagName": "package-b@v${version}",
    "tagAnnotation": "Release package-b v${version}",
    "requireBranch": ["main", "release/*"]
  },
  "github": {
    "release": true,
    "releaseName": "package-b v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:git:release": "bash ../../scripts/git-flow-merge.sh ${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
